include_rules

preload src/
preload src/wtk

OBJS = src/*.o
OBJS += src/wtk/*.o

include prefix.tup
include suffix.tup
include deps.tup

OBJS += $(WTK_DEPENDENCIES)
LIBS = $(WTK_LIBS)

: $(OBJS) |> !ar |> $(PREFIX)wtk$(SUFFIX)$(LIB_EXT)


preload sample

OBJS = sample/*.o

include prefix.tup
include suffix.tup
include deps.tup

OBJS += $(WTK_DEPENDENCIES)
OBJS += $(PREFIX)wtk$(SUFFIX)$(LIB_EXT)
LIBS = $(WTK_LIBS)

: $(OBJS) |> !exe |> wtk-sample$(SUFFIX)$(EXE_EXT)
